#!/bin/bash

set -ex

cd "$(dirname "$0")" || exit 1

(cd jekyll && bundle exec jekyll build --lsi)
rsync -av --exclude .git --delete ./jekyll/_site/ docs/
rsync -av --exclude .git --delete ./archive/ docs/archive/
rsync -av --exclude .git --delete ./notes/ docs/notes/
echo -n kivikakk.ee > docs/CNAME
